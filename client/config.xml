<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.mdp.dotpclient" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>dOTP</name>
    <description>
        A client app for decentralized One Time Passwords
    </description>
    <author email="m@mdp.im" href="http://mdp.github.io">
        Mark Percival
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icon-192.png"/>
        <splash src="res/screen/screen.png" density="port-hdpi"/>
        <splash src="res/screen/screen.png" density="port-ldpi"/>
        <splash src="res/screen/screen.png" density="port-mdpi"/>
        <splash src="res/screen/screen.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/ios/icon-180.png" width="180" height="180" />
        <splash src="res/screen/ios/screen.png" width="320" height="480"/>
        <splash src="res/screen/ios/screen.png" width="640" height="960"/>
        <splash src="res/screen/ios/screen.png" width="768" height="1024"/>
        <splash src="res/screen/ios/screen.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/screen.png" width="1024" height="768"/>
        <splash src="res/screen/ios/screen.png" width="2048" height="1536"/>
        <splash src="res/screen/ios/screen.png" width="640" height="1136"/>
        <splash src="res/screen/ios/screen.png" width="750" height="1334"/>
        <splash src="res/screen/ios/screen.png" width="1242" height="2208"/>
        <splash src="res/screen/ios/screen.png" width="2208" height="1242"/>
    </platform>
    <icon src="res/ios/icon.png" />
</widget>
